#include <signal.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>


void trapper(int);

int main(int argc, char *argv[])
{
    int i;
    pid_t pid = getpid();
    if(fork()!=0){
       for(i=1; i<=64; i++)
         signal(i, trapper);
       printf("Identificativo de proceso: %d\n", pid );
       pause();
       printf("Continuando...\n");
    }
    else {
        sleep(5);
        kill (pid, SIGINT);
    }
    return 0;
}

void trapper(int sig)
{
    signal(sig, trapper);
    printf("Recibida la seÃ±al: %d\n", sig);
}
